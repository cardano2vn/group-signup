# Port for the application
PORT=3000

# Google Sheet ID (from the spreadsheet URL)
# Example: https://docs.google.com/spreadsheets/d/GOOGLE_SHEET_ID/edit
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Google Service Account Credentials File Path
# You need to create a service account and download the JSON credentials file
# Place it in the root directory and reference it here
GOOGLE_CREDENTIALS_PATH=./credentials.json

# Group names (comma-separated)
# Example: GROUP_NAMES=Group A,Group B,Group C,Group D,Group E
GROUP_NAMES=Group A,Group B,Group C,Group D,Group E

# Maximum students per group
MAX_STUDENTS_PER_GROUP=5

# Google reCAPTCHA Secret Key
# Get this from https://www.google.com/recaptcha/admin
# You'll also need to add the Site Key to public/index.html
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here
